# Platform God Environment Configuration
# Copy this file to .env and fill in your values
#
# All environment variables use the PG_* prefix for consistency

# ===========================================
# LLM Provider Configuration (REQUIRED)
# ===========================================
# At least one API key must be provided for live execution

# Anthropic API (Claude)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (GPT models)
# Get your key at: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# LLM Configuration (OPTIONAL)
# ===========================================

# LLM Provider: anthropic, openai, azure_openai, or custom
PG_LLM_PROVIDER=anthropic

# Default Model
# Anthropic options: claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022
# OpenAI options: gpt-4o, gpt-4o-mini, gpt-3.5-turbo
PG_LLM_MODEL=claude-3-5-sonnet-20241022

# Custom LLM API Key (for custom provider)
# PG_LLM_API_KEY=your_custom_llm_api_key_here

# Custom API Base URL (for proxy/custom endpoints)
# PG_LLM_BASE_URL=https://your-custom-endpoint.com

# Maximum tokens per LLM response (default: 8192)
# PG_LLM_MAX_TOKENS=8192

# LLM request temperature 0.0-1.0 (default: 0.0)
# PG_LLM_TEMPERATURE=0.0

# LLM request timeout in seconds (default: 120)
# PG_LLM_TIMEOUT=120

# Maximum retry attempts for LLM calls (default: 3)
# PG_LLM_MAX_RETRIES=3

# LLM rate limit per minute (default: 60)
# PG_LLM_RATE_LIMIT=60

# Enable LLM response caching (default: true)
# PG_LLM_CACHE_ENABLED=true

# LLM cache TTL in seconds (default: 3600)
# PG_LLM_CACHE_TTL=3600

# ===========================================
# API Server Configuration (OPTIONAL)
# ===========================================

# API Server Host (default: 127.0.0.1)
PG_API_HOST=0.0.0.0

# API Server Port (default: 8000)
PG_API_PORT=8000

# Number of worker processes (default: 4)
# PG_API_WORKERS=4

# ===========================================
# Security Configuration (OPTIONAL)
# ===========================================

# Enable Authentication (default: true)
PG_REQUIRE_AUTH=true

# JWT Secret for token signing
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
PG_JWT_SECRET=your_jwt_secret_here

# Comma-separated list of valid API keys
# Example: key1,key2,key3
PG_API_KEYS=your_api_key_here

# API authentication enabled (default: false)
# PG_API_AUTH_ENABLED=false

# Allowed CORS origins (comma-separated)
# PG_API_ALLOW_ORIGIN=http://localhost:3000,http://localhost:5173

# ===========================================
# Rate Limiting (OPTIONAL)
# ===========================================

# Rate limit in format "X/second" or "X/minute" (default: 10/second)
PG_RATE_LIMIT=10/second

# Enable API rate limiting (default: true)
# PG_API_RATE_LIMIT_ENABLED=true

# API rate limit per minute (default: 120)
# PG_API_RATE_LIMIT=120

# ===========================================
# Request Size Limits (OPTIONAL)
# ===========================================

# Maximum request size in bytes (e.g., 10485760 for 10MB)
# Helps prevent DoS attacks
PG_MAX_REQUEST_SIZE=10485760

# Maximum response size in bytes for warning threshold
PG_MAX_RESPONSE_SIZE=10485760

# Maximum query string length (default: 512)
PG_MAX_QUERY_STRING_LENGTH=512

# API max body size in bytes (default: 10485760)
# PG_API_MAX_BODY_SIZE=10485760

# ===========================================
# Input Validation (OPTIONAL)
# ===========================================

# Enable strict input validation (default: true)
PG_VALIDATION_STRICT=true

# ===========================================
# Storage Configuration (OPTIONAL)
# ===========================================

# State Directory (default: ./var)
PG_STATE_DIR=./var

# Maximum number of runs to keep in history (default: 1000)
# PG_MAX_RUNS=1000

# ===========================================
# Registry Configuration (OPTIONAL)
# ===========================================

# Registry storage directory (default: var/registry)
# PG_REGISTRY_DIR=var/registry

# Audit log directory (default: var/audit)
# PG_AUDIT_DIR=var/audit

# Registry backup directory (default: var/backups/registry)
# PG_REGISTRY_BACKUP_DIR=var/backups/registry

# Maximum entity size in bytes (default: 10485760)
# PG_REGISTRY_MAX_ENTITY_SIZE=10485760

# Entity retention period in days (default: 90)
# PG_REGISTRY_RETENTION_DAYS=90

# Registry cache size (default: 1000)
# PG_REGISTRY_CACHE_SIZE=1000

# ===========================================
# Logging Configuration (OPTIONAL)
# ===========================================

# Log Level: debug, info, warning, error, critical
# PG_LOG_LEVEL=info

# ===========================================
# Audit Configuration (OPTIONAL)
# ===========================================

# Enable audit logging (default: true)
# PG_AUDIT_ENABLED=true

# Audit log file path (default: var/audit/audit.log)
# PG_AUDIT_LOG_PATH=var/audit/audit.log

# Maximum audit log size in MB (default: 100)
# PG_AUDIT_LOG_MAX_SIZE=100

# Maximum audit log backups (default: 10)
# PG_AUDIT_LOG_MAX_BACKUPS=10

# Audit retention period in days (default: 365)
# PG_AUDIT_RETENTION_DAYS=365

# Log API requests in audit log (default: false)
# PG_AUDIT_API_REQUESTS=false

# ===========================================
# Dashboard Configuration (OPTIONAL)
# ===========================================

# Enable dashboard UI (default: true)
# PG_DASHBOARD_ENABLED=true

# Dashboard theme: dark or light (default: dark)
# PG_DASHBOARD_THEME=dark

# Dashboard language (default: en)
# PG_DASHBOARD_LANGUAGE=en

# Dashboard auto-refresh interval in seconds (default: 30)
# PG_DASHBOARD_REFRESH_INTERVAL=30

# Dashboard timezone (default: UTC)
# PG_DASHBOARD_TIMEZONE=UTC

# ===========================================
# WebSocket Configuration (OPTIONAL)
# ===========================================

# Maximum WebSocket connections (default: 100)
# PG_WS_MAX_CONNECTIONS=100

# ===========================================
# Notification Configuration (OPTIONAL)
# ===========================================

# Enable notifications (default: true)
# PG_NOTIFICATIONS_ENABLED=true

# Enable desktop notifications (default: true)
# PG_NOTIFY_DESKTOP_ENABLED=true

# Enable desktop notification sound (default: false)
# PG_NOTIFY_DESKTOP_SOUND=false

# Enable email notifications (default: false)
# PG_NOTIFY_EMAIL_ENABLED=false

# SMTP server configuration for email notifications
# PG_SMTP_HOST=localhost
# PG_SMTP_PORT=587
# PG_SMTP_USER=
# PG_SMTP_PASSWORD=
# PG_EMAIL_FROM=platform-god@localhost
# PG_EMAIL_TO=admin@example.com

# Enable webhook notifications (default: false)
# PG_NOTIFY_WEBHOOK_ENABLED=false
# PG_WEBHOOK_URL=https://your-webhook-url.com
# PG_WEBHOOK_SECRET=your_webhook_secret

# Enable Slack notifications (default: false)
# PG_NOTIFY_SLACK_ENABLED=false
# PG_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# PG_SLACK_CHANNEL=#platform-god

# Enable quiet hours for notifications (default: false)
# PG_NOTIFY_QUIET_HOURS_ENABLED=false

# ===========================================
# Advanced Settings (OPTIONAL)
# ===========================================

# Profile: dev, staging, or prod
# PG_PROFILE=dev

# Maximum worker threads (default: 10)
# PG_MAX_WORKERS=10

# Maximum memory usage in MB (default: 2048)
# PG_MAX_MEMORY=2048

# Enable experimental features (default: false)
# PG_EXPERIMENTAL_AGENTS=false
# PG_PARALLEL_CHAINS=false
# PG_PREDICTIVE_CACHE=false

# Enable beta features (default: false)
# PG_BETA_DASHBOARD=false
# PG_ADVANCED_ANALYTICS=false

# Enable telemetry (default: false)
# PG_TELEMETRY_ENABLED=false
# PG_TELEMETRY_ENDPOINT=

# ===========================================
# Development Settings (OPTIONAL)
# ===========================================

# Enable debug mode (additional logging)
# WARNING: Never enable in production
# PG_DEBUG=false
